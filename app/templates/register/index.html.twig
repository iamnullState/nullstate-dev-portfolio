{% extends "layouts/base.html.twig" %}

{% block content %}
    <div class="row"> 
          <div class="col-lg-4 p-1 m-1"> 
            <h5>[ <span class="text-secondary">n3Dev</span> ] ⇢ <span class="text-secondary">register info</span></h5>
            <p> 

            <form method="post" action="/register" novalidate>
              <input type="hidden" name="_token" value="{{ csrf_token }}">
            
              <ul class="list-group">

                <li class="list-group-item border-0">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1 text-secondary"><i class="bi bi-file-earmark-text-fill"></i> Terms Agreement</h5>
                    <small class="text-body-secondary"><a href="/terms" class="text-decoration-none"><span class="badge text-bg-secondary"><i class="bi bi-search"></i> View</span></a></small>
                  </div>
                  <p class="mb-1">tl;dr info about our terms and agreement and why it's important</p>
                  <small class="text-body-secondary">By checking the box below, you agree with our terms.</small> <br />
                  <input class="form-check-input me-1 text-secondary bg-secondary" type="checkbox" value="1" name="termsconfirm" id="termsconfirm" required>
                  <label class="form-check-label" for="termsconfirm"><small>Agreed.</small></label>
                </li>

                <hr class="fs-4 fw-bold text-secondary w-100" />

                <li class="list-group-item border-0">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1 text-secondary"><i class="bi bi-database-fill-lock"></i> Data Policy</h5>
                    <small class="text-body-secondary"><a href="/data" class="text-decoration-none"><span class="badge text-bg-secondary"><i class="bi bi-search"></i> View</span></a></small>
                  </div>
                  <p class="mb-1">tl;dr info about data policy and why it's important</p>
                  <small class="text-body-secondary">By checking the box below, you agree with our data policy.</small> <br />
                  <input class="form-check-input me-1 text-secondary bg-secondary" type="checkbox" value="1" name="dataconfirm" id="dataconfirm" required>
                  <label class="form-check-label" for="dataconfirm"><small>Agreed.</small></label>
                </li>

                <hr class="fs-4 fw-bold text-secondary w-100" />

                <li class="list-group-item border-0">
                  <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1 text-secondary"><i class="bi bi-file-earmark-person-fill"></i> Age Policy</h5>
                    <small class="text-body-secondary"><a href="/data-age" class="text-decoration-none"><span class="badge text-bg-secondary"><i class="bi bi-search"></i> View</span></a></small>
                  </div>
                  <p class="mb-1">tl;dr info about age policy and why it's important</p>
                  <small class="text-body-secondary">By checking the box below, you are stating youre over the age of 16.</small> <br />
                  <input class="form-check-input me-1 text-secondary bg-secondary" type="checkbox" value="1" name="ageconfirm" id="ageconfirm" required>
                  <label class="form-check-label" for="ageconfirm"><small>Agreed.</small></label>
                </li>
              </ul>
            </p>
            
          </div>
          <div class="col-lg-5 p-1"> 
            <h5>[ <span class="text-secondary">n3Dev</span> ] ⇢ <span class="text-secondary">user registeration</span></h5>

            <p> 

                {% if errors.form %}
                  <div class="alert alert-danger border border-1 border-dark">{{ errors.form }}</div>
                {% endif %}


              <ul class="list-group"> 


                  <li class="list-group-item border-0"> 
                    <div class="d-flex w-100 justify-content-between">
                      <h5 class="mb-1 text-secondary"><i class="bi bi-envelope-heart-fill"></i> Your Email Address</h5>
                    </div>
                    <input
                      id="email" name="email" type="email"
                      class="form-control rounded-0 {% if errors.email %}is-invalid{% endif %}"
                      value="{{ old.email|default('') }}"
                      autocomplete="email" required
                    >
                    {% if errors.email %}
                      <div class="invalid-feedback">{{ errors.email }}</div>
                    {% else %}
                      <div class="form-text">We’ll never share your email.</div>
                    {% endif %}
                  </li>

                  <li class="list-group-item border-0"> 
                    <div class="d-flex w-100 justify-content-between">
                      <h5 class="mb-1 text-secondary"><i class="bi bi-person-hearts"></i> Your Username</h5>
                    </div>
                    <input
                      id="username" name="username" type="text"
                      class="form-control rounded-0 {% if errors.username %}is-invalid{% endif %}"
                      value="{{ old.username|default('') }}"
                      minlength="3" maxlength="32" pattern="[A-Za-z0-9_]+"
                      autocomplete="username" required
                    >
                    {% if errors.username %}
                      <div class="invalid-feedback">{{ errors.username }}</div>
                    {% else %}
                      <div class="form-text">3–32 chars; letters, numbers, underscore.</div>
                    {% endif %}
                  </li>

                  <li class="list-group-item border-0"> 
                    <div class="d-flex w-100 justify-content-between">
                      <h5 class="mb-1 text-secondary"><i class="bi bi-key-fill"></i> Choose a Password</h5>
                    </div>
                    <input
                      id="password" name="password" type="password"
                      class="form-control rounded-0 {% if errors.password %}is-invalid{% endif %}"
                      minlength="10" autocomplete="new-password" required
                    >
                    {% if errors.password %}
                      <div class="invalid-feedback">{{ errors.password }}</div>
                    {% else %}
                      <div class="form-text">Use at least 10 characters.</div>
                    {% endif %}
                  </li>

                  <li class="list-group-item border-0"> 
                    <div class="d-flex w-100 justify-content-between">
                      <h5 class="mb-1 text-secondary"><i class="bi bi-key"></i> Confirm Your Password</h5>
                    </div>
                    <input
                      id="password_confirmation" name="password_confirmation" type="password"
                      class="form-control rounded-0 {% if errors.password_confirmation %}is-invalid{% endif %}"
                      autocomplete="new-password" required
                    >
                    {% if errors.password_confirmation %}
                      <div class="invalid-feedback">{{ errors.password_confirmation }}</div>
                    {% endif %}
                  </li>

                  <li class="list-group-item border-0"> 
                    <input name="submit" type="submit" class="btn btn-secondary rounded-0 w-100 text-white border border-2 border-dark" value="Register Your Account!">
                  </li>
              </ul>
            </p>
            <p class="mt-3">
              Already have an account? <a href="/login">Log in</a>.
            </p>
            </form>
          </div>
        </div>  
{% endblock %}